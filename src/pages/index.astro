---
import Layout from '~/layouts/LandingLayout.astro';

import Features from '~/components/widgets/Features.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Med Spouse Men',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="Coming soon"
    title="For the Men Behind the Women in Scrubs"
    subtitle="Join the community to connect, find resources, and share the journey of life with a medical professional."
    actions={[
      {
        variant: 'primary',
        text: 'Join the community',
        href: 'https://forms.gle/KqFhxcq1b2MRmHeG6',
        // icon: 'tabler:square-rounded-arrow-right',
        target: '_blank',
      },
      // { text: 'Learn more', href: '#' },
    ]}
    image={{
      // src: 'https://images.unsplash.com/photo-1558803116-c1b4ac867b31?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2069&q=80',
      // alt: 'Store with a Coming Soon sign. Pre-launch Landing Page',
      src: 'https://images.unsplash.com/photo-1470611736165-18737bb3afce?q=80&w=2069&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D',
      alt: 'Man looking away from camera over landscape. Coming Soon Landing Page.',
    }}
  />

  <Features
    id="benefits"
    tagline="Benefits"
    title="Why Join Med Spouse Men?"
    subtitle="Because navigating medical life is easier together."
    items={[
      {
        title: 'Community and Support',
        description:
          'A place to connect with others who understand the unique challenges of being the spouse of a medical professional. Share experiences, seek advice, and build meaningful relationships.',
        icon: 'tabler:world',
      },
      {
        title: 'Advice and Resources',
        description:
          'Practical tips on navigating residency, rotations, and demanding schedules. Access resources on financial planning, mental health, and maintaining a strong relationship.',
        icon: 'tabler:help',
      },
      {
        title: 'Navigating Long-Distance and Limited Time',
        description:
          'Learn strategies to stay connected and supportive during away rotations and long work hours. Tips to maintain balance and grow together despite the demands of medical training.',
        icon: 'tabler:clock',
      },
      {
        title: 'Celebrating Milestones',
        description:
          'Honor achievements like Match Day, graduations, and the completion of training. Get inspired with creative ways to celebrate, even with limited time.',
        icon: 'tabler:confetti',
      },
      {
        title: 'Personal Growth',
        description:
          "Explore opportunities for self-improvement and fulfillment. Discover stories of spouses who pursued their passions, careers, or hobbies while supporting their partner's journey.",
        icon: 'tabler:rocket',
      },
      {
        title: 'Fatherhood and Family Life',
        description:
          'Insights and advice for juggling parenting duties with a busy partner. Tips for being a present and supportive father while navigating the challenges of medical life.',
        icon: 'tabler:baby-carriage',
      },
      {
        title: 'Humor and Relatability',
        description:
          'Find humor in the quirks of medical life. Enjoy funny anecdotes, memes, and lighthearted advice like “How to be a trophy husband.”',
        icon: 'tabler:mood-xd',
      },
      // {
      //   title: 'Guest Contributions',
      //   description:
      //     'Hear from other medical spouse men through blog posts, stories, or podcasts. Share your own journey to inspire and connect with the community.',
      //   icon: 'tabler:bulb',
      // },
      {
        title: 'Events and Meetups',
        description:
          'Join local or virtual meetups to network with other medical spouse men. Build friendships and exchange ideas in a supportive environment.',
        icon: 'tabler:ticket',
      },
    ]}
  />

  <CallToAction
    title="Coming soon"
    subtitle="We are working on building this community. Join by clicking the button below and we'll be in touch  !"
    actions={[
      {
        variant: 'primary',
        text: 'Join Now',
        href: 'https://forms.gle/KqFhxcq1b2MRmHeG6',
        // icon: 'tabler:download',
        target: '_blank',
      },
    ]}
  />
</Layout>
